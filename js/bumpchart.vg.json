{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.1.0.json",
    "width": 600, 
    "height": 600,
    "data": {"url": "https://raw.githubusercontent.com/ngkaiyi00/FIT3179/main/datasets/bump_chart.csv"},
    "params": [
      {
        "name": "top_n_genres", 
        "value": 10 ,
        "bind": {"input": "range", "min": 1, "max": 10, "step": 1, "name": "Number of Ranks to Show: " }
      }
    ],

    

    "transform": [
      {"calculate": "toNumber(datum.RANK)", "as": "num_rank"},
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "num_rank", "order": "ascending"}],		
        "groupby": ["MONTH"]
      },
      { "filter": "datum.rank <= top_n_genres" }
    ],

    "encoding": {
      "x": {
        "field": "MONTH",
        "type": "ordinal",
        "axis": {
          "labelAngle": 1
        },
        "title": "Month"
      },
      "y": {  
        "field": "rank",
        "type": "quantitative",
        "sort": "descending",
        "scale": {"domain": [0.5, {"expr": "top_n_genres+0.5"} ]},
        "axis": { 
          "labelAngle": 0 ,
          "tickMinStep": 1 ,
          "tickCount": {"expr": "top_n_genres"},
          "grid": false
        },
        "title": "Rank"
      }
    },

    "layer": [
      {
        "mark": {
            "type": "line", 
            "interpolate": "linear"
        },
        "encoding": {
            "color": {
              "field": "COUNTRY",
              "scale": {
                "scheme": "tableau20"
              }
            },
            "size":{
                "condition": {
                    "param": "select_genre", 
                    "empty": false, 
                    "value": 6
                },
                "value": 2
            }}
      },
      {
        "params": [
            {"name": "select_genre", "select": {"type": "point", "on": "click", "fields": ["COUNTRY"]}, "bind": "legend"}
        ],

        "mark": {"type" :"circle"},
        "encoding": {
          "color": {
            "condition":  {
              "param": "select_genre", 
              "empty": false, 
              "value": "black"
            }, 
            "field": "COUNTRY"
          },
          "size": {
            "value": 150
          }
        }
      }
    ],
    "config": {
      "background":"papayawhip",
      "font": "verdana"
    }
}
